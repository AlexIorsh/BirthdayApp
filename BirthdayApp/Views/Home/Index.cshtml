@model BirthdayApp.Models.HomeViewModel
@{
    ViewData["Title"] = "Главная";
    int GetAge(DateTime birthDate)
    {
        var today = DateTime.Today;
        int age = today.Year - birthDate.Year;
        if (birthDate > today.AddYears(-age)) age--;
        return age;
    }
}

<h2>Сегодняшние и ближайшие дни рождения</h2>

@if (!Model.TodayBirthdays.Any() && !Model.UpcomingBirthdays.Any())
{
    <p>Нет дней рождения в ближайшую неделю.</p>
}
else
{
    @if (Model.TodayBirthdays.Any())
    {
        <div class="alert alert-success">
            <h3>🎉 Сегодня празднуют день рождения:</h3>
        </div>
        <table class="table table-success">
            <thead>
                <tr>
                    <th>Имя</th>
                    <th>Дата рождения</th>
                    <th>Возраст</th>
                    <th>Фото</th>
                    <th>Хобби и интересы</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var birthday in Model.TodayBirthdays)
                {
                    <tr>
                        <td><strong>@birthday.Name</strong></td>
                        <td>@birthday.BirthDate.ToString("d")</td>
                        <td>@GetAge(birthday.BirthDate)</td>
                        <td>
                            @if (!string.IsNullOrEmpty(birthday.PhotoPath))
                            {
                                <img src="@birthday.PhotoPath" alt="Фото" style="max-width:120px; max-height:120px; object-fit:cover; border-radius:8px;" />
                            }
                        </td>
                        <td>@birthday.Hobbies</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    @if (Model.UpcomingBirthdays.Any())
    {
        <div class="alert alert-info">
            <h3>📅 Ближайшие дни рождения:</h3>
        </div>
        <table class="table table-info">
            <thead>
                <tr>
                    <th>Имя</th>
                    <th>Дата рождения</th>
                    <th>Возраст</th>
                    <th>Фото</th>
                    <th>Хобби и интересы</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var birthday in Model.UpcomingBirthdays)
                {
                    <tr>
                        <td>@birthday.Name</td>
                        <td>@birthday.BirthDate.ToString("d")</td>
                        <td>@GetAge(birthday.BirthDate)</td>
                        <td>
                            @if (!string.IsNullOrEmpty(birthday.PhotoPath))
                            {
                                <img src="@birthday.PhotoPath" alt="Фото" style="max-width:120px; max-height:120px; object-fit:cover; border-radius:8px;" />
                            }
                        </td>
                        <td>@birthday.Hobbies</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

<div class="mt-4">
    <a class="btn btn-primary" href="@Url.Action("Index", "Birthday")">Все дни рождения</a>
</div>
