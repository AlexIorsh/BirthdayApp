@model BirthdayApp.Models.Birthday

<h2>Добавить новый день рождения</h2>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">Имя</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BirthDate">Дата рождения</label>
        <input asp-for="BirthDate" type="date" class="form-control" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Photo">Фотография</label>
        <input type="file" class="form-control" id="Photo" name="photo" />
    </div>
    <div class="form-group">
        <label asp-for="Hobbies">Хобби и интересы</label>
        <input asp-for="Hobbies" class="form-control" />
        <span asp-validation-for="Hobbies" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>
<a href="@Url.Action("Index")">Назад к списку</a>
