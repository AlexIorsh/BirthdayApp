@model BirthdayApp.Models.Birthday

@{
    ViewData["Title"] = "Редактировать день рождения";
}

<h2>Редактировать день рождения</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PhotoPath" />
            
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Имя</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="BirthDate" class="control-label">Дата рождения</label>
                <input asp-for="BirthDate" class="form-control" type="date" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Hobbies" class="control-label">Хобби и интересы</label>
                <textarea asp-for="Hobbies" class="form-control" rows="3" placeholder="Введите хобби и интересы..."></textarea>
                <span asp-validation-for="Hobbies" class="text-danger"></span>
            </div>
            
            @if (!string.IsNullOrEmpty(Model.PhotoPath))
            {
                <div class="form-group mb-3">
                    <label class="control-label">Текущая фотография</label>
                    <div>
                        <img src="@Model.PhotoPath" alt="Фото" style="max-width:200px; max-height:200px; object-fit:cover; border-radius:8px;" />
                    </div>
                </div>
            }
            
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 